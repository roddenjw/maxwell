# Codex IDE Environment Variables

# API Keys (Optional - for cloud LLM features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./data/codex.db

# Vector Store Configuration
CHROMA_DB_PATH=./data/chroma
GRAPH_DB_PATH=./data/graph

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:5173

# Development
DEBUG=True
LOG_LEVEL=INFO

# Security (Generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# LLM Configuration
LOCAL_LLM_MODEL_PATH=./models/llama-3-8b-q4.gguf
DEFAULT_LLM_STRATEGY=auto  # auto, local_only, cloud_only

# Feature Flags
ENABLE_TELEMETRY=False
ENABLE_CRASH_REPORTS=False
